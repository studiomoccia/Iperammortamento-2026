    <script>
        const html = document.documentElement;
        const themeToggle = document.getElementById('themeToggle');
        const themeIcon = document.getElementById('themeIcon');
        const amountInput = document.getElementById('investAmount');
        const coeffInput = document.getElementById('coeff');
        
        const iresBaseEl = document.getElementById('ires-base');
        const iresTotalEl = document.getElementById('ires-total');
        const iresNetEl = document.getElementById('ires-net');

        const taxBaseEl = document.getElementById('tax-base');
        const taxTotalEl = document.getElementById('tax-total');
        const taxNetEl = document.getElementById('tax-net');
        
        const tableBody = document.getElementById('amortTable');
        const breakdownContainer = document.getElementById('breakdown-container');

        // Logic Tema
        themeToggle.addEventListener('click', () => {
            html.classList.toggle('dark');
            const isDark = html.classList.contains('dark');
            themeIcon.className = isDark ? 'fa-solid fa-sun text-amber-400' : 'fa-solid fa-moon text-slate-600';
        });

        function formatCurrency(val) {
            return new Intl.NumberFormat('it-IT', { style: 'currency', currency: 'EUR', maximumFractionDigits: 0 }).format(val);
        }

        function calculate() {
            const amount = parseFloat(amountInput.value) || 0;
            const coeff = (parseFloat(coeffInput.value) || 0) / 100;

            // Logica Scaglioni Marginali
            let s1_amount = Math.min(amount, 2500000);
            let s1_bonus = s1_amount * 1.80;

            let s2_amount = amount > 2500000 ? Math.min(amount - 2500000, 7500000) : 0;
            let s2_bonus = s2_amount * 1.00;

            let s3_amount = amount > 10000000 ? Math.min(amount - 10000000, 10000000) : 0;
            let s3_bonus = s3_amount * 0.50;

            const totalBonus = s1_bonus + s2_bonus + s3_bonus;
            
            // Valori Deduzione
            const dedBase = amount;
            const dedTotal = amount + totalBonus;
            const dedExtra = totalBonus;

            // Valori Risparmio IRES (24%)
            const taxBase = dedBase * 0.24;
            const taxTotal = dedTotal * 0.24;
            const taxNet = dedExtra * 0.24;

            // Aggiornamento UI
            iresBaseEl.innerText = formatCurrency(dedBase);
            iresTotalEl.innerText = formatCurrency(dedTotal);
            iresNetEl.innerText = formatCurrency(dedExtra);

            taxBaseEl.innerText = formatCurrency(taxBase);
            taxTotalEl.innerText = formatCurrency(taxTotal);
            taxNetEl.innerText = formatCurrency(taxNet);

            renderBreakdown([
                { label: 'Scaglione 1 (0-2.5M)', quota: s1_amount, rate: '180%', val: s1_bonus, color: 'blue' },
                { label: 'Scaglione 2 (2.5-10M)', quota: s2_amount, rate: '100%', val: s2_bonus, color: 'green' },
                { label: 'Scaglione 3 (10-20M)', quota: s3_amount, rate: '50%', val: s3_bonus, color: 'slate' }
            ]);

            updateTable(amount, totalBonus, coeff);
        }

        function renderBreakdown(data) {
            breakdownContainer.innerHTML = '';
            data.forEach(item => {
                if(item.quota === 0 && amountInput.value > 0) return;
                const perc = (item.quota / amountInput.value * 100) || 0;
                const html = `
                    <div class="flex flex-col space-y-1">
                        <div class="flex justify-between items-end text-[11px] font-bold">
                            <span class="text-slate-500 dark:text-slate-400 uppercase tracking-tighter">${item.label}</span>
                            <span class="text-slate-800 dark:text-white">${formatCurrency(item.quota)} x ${item.rate} = <span class="text-${item.color}-600 font-black">${formatCurrency(item.val)}</span></span>
                        </div>
                        <div class="w-full bg-slate-100 dark:bg-slate-700 h-1 rounded-full overflow-hidden">
                            <div class="bg-${item.color}-500 h-full" style="width: ${perc}%"></div>
                        </div>
                    </div>
                `;
                breakdownContainer.insertAdjacentHTML('beforeend', html);
            });
        }

        function updateTable(cost, bonus, coeff) {
            tableBody.innerHTML = '';
            if (coeff <= 0) return;
            
            let years = Math.ceil(1 / coeff) + 1;
            for (let i = 0; i < years; i++) {
                let actualCoeff = (i === 0 || i === (years - 1)) ? (coeff / 2) : coeff;
                let ammCiv = cost * actualCoeff;
                let varDim = bonus * actualCoeff;
                
                const row = `
                    <tr class="border-b border-slate-50 dark:border-slate-700/50 hover:bg-slate-50 dark:hover:bg-slate-700/30 transition-colors">
                        <td class="p-4 text-sm font-semibold">Anno ${i + 1} (${2026 + i})</td>
                        <td class="p-4 text-sm">${formatCurrency(ammCiv)}</td>
                        <td class="p-4 text-sm text-blue-600 dark:text-blue-400 font-bold">+ ${formatCurrency(varDim)}</td>
                        <td class="p-4 text-sm font-black">${formatCurrency(ammCiv + varDim)}</td>
                    </tr>
                `;
                tableBody.insertAdjacentHTML('beforeend', row);
            }
        }

        [amountInput, coeffInput].forEach(input => input.addEventListener('input', calculate));
        window.onload = calculate;

    </script>
</body>
</html>
